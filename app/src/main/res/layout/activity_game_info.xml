<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp">
    <android.support.design.widget.TabLayout
        android:id="@+id/game_info_tabs"
        android:layout_width="match_parent"
        app:layout_heightPercent="15%">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/game_info_pager"
        android:layout_width="match_parent"
        app:layout_heightPercent="70%"
        android:layout_below="@id/game_info_tabs"
        />
    <android.support.v7.widget.CardView
        app:layout_marginLeftPercent="10%"
        app:cardCornerRadius="8dp"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="10%"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_below="@id/game_info_pager"
        android:id="@+id/game_info_btn_join"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_join"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:layout_marginLeftPercent="60%"
        app:cardCornerRadius="8dp"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="10%"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_below="@id/game_info_pager"
        android:id="@+id/game_info_btn_cancel"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_cancel"
            />
    </android.support.v7.widget.CardView>
</android.support.percent.PercentRelativeLayout>