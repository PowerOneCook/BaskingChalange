<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">
    <ImageView
        app:layout_marginTopPercent="5%"
        android:layout_centerHorizontal="true"
        android:id="@+id/frag_wait_talk_tutorial"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="65%" />
    <ImageButton
        app:layout_marginTopPercent="34%"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@id/frag_wait_talk_tutorial"
        android:id="@+id/frag_wait_talk_btn_tutorial_prev"
        />
    <ImageButton
        app:layout_marginTopPercent="34%"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@id/frag_wait_talk_tutorial"
        android:id="@+id/frag_wait_talk_btn_tutorial_next"
        />
    <android.support.v7.widget.CardView
        app:layout_widthPercent="100%"
        app:layout_heightPercent="20%"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        app:layout_marginBottomPercent="5%"
        android:id="@+id/frag_wait_talk_btn_get_id"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_get_id"
            android:textSize="@dimen/text_body"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>
</android.support.percent.PercentRelativeLayout>