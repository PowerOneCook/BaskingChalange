<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frag_team_select_title"
        android:text="@string/frag_team_select_title"
        android:layout_centerHorizontal="true"
        />
    <ExpandableListView
        android:layout_width="match_parent"
        app:layout_heightPercent="60%"
        android:id="@+id/frag_team_select_team_list"
        android:layout_below="@id/frag_team_select_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frag_team_select_message"
        android:text="@string/frag_team_select_message_ex"
        android:layout_below="@id/frag_team_select_team_list"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />
</android.support.percent.PercentRelativeLayout>